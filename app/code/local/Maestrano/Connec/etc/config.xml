<?xml version="1.0"?>
<config>
    <modules>
        <Maestrano_Connec>
            <version>0.1.0</version>
        </Maestrano_Connec>
    </modules>
    <frontend>
        <routers>
            <connec>
                <use>standard</use>
                <args>
                    <module>Maestrano_Connec</module>
                    <frontName>connec</frontName>
                </args>
            </connec>
        </routers>
    </frontend>
    <global>
        <models>
            <connec>
                <class>Maestrano_Connec_Model</class>
                <resourceModel>connec_mysql4</resourceModel>
            </connec>
            <connec_mysql4>
                <class>Maestrano_Connec_Model_Mysql4</class>
                <entities>
                    <mnoidmap>
                        <table>connec_mnoidmap</table>
                    </mnoidmap>
                </entities>
            </connec_mysql4>
        </models>
        <resources>
            <connec_setup>
                <setup>
                    <module>Maestrano_Connec</module>
                </setup>
            </connec_setup>
            <connec_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </connec_write>
            <connec_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </connec_read>
        </resources>
        <helpers>
            <mnomap>
                <class>Maestrano_Connec_Helper</class>
            </mnomap>
        </helpers>
        <events>
            <!-- Customers -->
            <customer_save_after>
                <observers>
                    <maestrano_connec_model_customer_save_after>
                        <type>singleton</type>
                        <class>Maestrano_Connec_Model_CustomersObserver</class>
                        <method>customerSaveAfter</method>
                    </maestrano_connec_model_customer_save_after>
                </observers>
            </customer_save_after>
            <customer_delete_after>
                <observers>
                    <maestrano_connec_model_customer_delete_after>
                        <type>singleton</type>
                        <class>Maestrano_Connec_Model_CustomersObserver</class>
                        <method>customerDeleteAfter</method>
                    </maestrano_connec_model_customer_delete_after>
                </observers>
            </customer_delete_after>

            <!-- CustomerAddresses -->
            <customer_address_save_after>
                <observers>
                    <maestrano_connec_model_customer_address_save_after>
                        <type>singleton</type>
                        <class>Maestrano_Connec_Model_CustomerAddressesObserver</class>
                        <method>customerAddressSaveAfter</method>
                    </maestrano_connec_model_customer_address_save_after>
                </observers>
            </customer_address_save_after>

            <!-- Products -->
            <catalog_product_save_after>
                <observers>
                    <maestrano_connec_model_catalog_product_save_after>
                        <type>singleton</type>
                        <class>Maestrano_Connec_Model_ProductsObserver</class>
                        <method>catalogProductSaveAfter</method>
                    </maestrano_connec_model_catalog_product_save_after>
                </observers>
            </catalog_product_save_after>
            <catalog_product_delete_after>
                <observers>
                    <maestrano_connec_model_catalog_product_delete_after>
                        <type>singleton</type>
                        <class>Maestrano_Connec_Model_ProductsObserver</class>
                        <method>catalogProductDeleteAfter</method>
                    </maestrano_connec_model_catalog_product_delete_after>
                </observers>
            </catalog_product_delete_after>

            <!-- Inventory -->
            <cataloginventory_stock_item_save_after>
                <observers>
                    <maestrano_connec_model_cataloginventory_stock_item_save_after>
                        <type>singleton</type>
                        <class>Maestrano_Connec_Model_InventoryObserver</class>
                        <method>cataloginventoryStockItemSaveAfter</method>
                    </maestrano_connec_model_cataloginventory_stock_item_save_after>
                </observers>
            </cataloginventory_stock_item_save_after>
            <cataloginventory_stock_item_delete_after>
                <observers>
                    <maestrano_connec_model_cataloginventory_stock_item_delete_after>
                        <type>singleton</type>
                        <class>Maestrano_Connec_Model_InventoryObserver</class>
                        <method>cataloginventoryStockItemDeleteAfter</method>
                    </maestrano_connec_model_cataloginventory_stock_item_delete_after>
                </observers>
            </cataloginventory_stock_item_delete_after>
            <checkout_submit_all_after>
                <observers>
                    <maestrano_connec_model_checkout_submit_all_after>
                        <type>singleton</type>
                        <class>Maestrano_Connec_Model_InventoryObserver</class>
                        <method>checkoutSubmitAllAfter</method>
                    </maestrano_connec_model_checkout_submit_all_after>
                </observers>
            </checkout_submit_all_after>
        </events>
    </global>
</config> 